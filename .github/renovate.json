{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "docker": {
    "enabled": false
  },
  "digest": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "minor dependencies",
      "groupSlug": "dependencies-minor"
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "major dependencies",
      "groupSlug": "dependencies-major"
    }
  ]
}
